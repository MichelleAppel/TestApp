<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"

    tools:context="com.example.michelle.test.MainActivity">
        <ImageView android:id="@+id/shoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shoes"
        android:layout_alignBottom="@+id/body"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <ImageView android:id="@+id/arms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/arms"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView android:id="@+id/body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/body"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="150dp" />
        <ImageView android:id="@+id/mouth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mouth"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView android:id="@+id/mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/mustache"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp" />
        <ImageView android:id="@+id/nose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nose"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp" />
        <ImageView android:id="@+id/eyes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyes"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp" />
        <ImageView android:id="@+id/ears"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ears"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView android:id="@+id/eyebrows"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/eyebrows"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="0dp" />
        <ImageView android:id="@+id/glasses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/glasses"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView android:id="@+id/hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hat"
            android:layout_alignBottom="@+id/body"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" /> />
    />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_height="wrap_content">
            <CheckBox android:id="@+id/checkBox_eyes"
                android:layout_column = "0"
                android:text="Eyes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />
            <CheckBox android:id="@+id/checkBox_nose"
                android:layout_column = "1"
                android:text="Nose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            tools:layout_height="wrap_content"
            android:layout_height="match_parent">

            <CheckBox android:id="@+id/checkBox_mouth"
                android:layout_column = "0"
                android:text="Mouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />
            <CheckBox android:id="@+id/checkBox_ears"
                android:layout_column = "1"
                android:text="Ears"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent" >
            <CheckBox android:id="@+id/checkBox_eyebrows"
                android:layout_column = "0"
                android:text="Eyebrows"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />
            <CheckBox android:id="@+id/checkBox_arms"
                android:layout_column = "1"
                android:text="Arms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_height="wrap_content">

            <CheckBox android:id="@+id/checkBox_hat"
                android:layout_column = "0"
                android:text="Hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />

            <CheckBox android:id="@+id/checkBox_glasses"
                android:layout_column = "1"
                android:text="Glasses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:layout_weight = "1"
                android:onClick="onCheckboxClicked" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:layout_height="wrap_content">
        <CheckBox android:id="@+id/checkBox_shoes"
            android:layout_column = "0"
            android:text="Shoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_weight = "1"
            android:onClick="onCheckboxClicked" />
        <CheckBox android:id="@+id/checkBox_mustache"
            android:layout_column = "1"
            android:text="Mustache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_weight = "1"
            android:onClick="onCheckboxClicked" />
        </TableRow>
    </TableLayout>
</RelativeLayout>
